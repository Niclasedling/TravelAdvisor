<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelAdvisor.Views.SignUpPage">
    <StackLayout Padding="0">

        <Grid>
            <StackLayout Padding="0" Margin="0">
                <Frame BackgroundColor="DarkGreen" HeightRequest="130" HorizontalOptions="FillAndExpand" CornerRadius="0">

                </Frame>
            </StackLayout>

            <StackLayout Margin="15,110,15,0">

                <Frame BackgroundColor="White" HasShadow="True" HeightRequest="320" HorizontalOptions="FillAndExpand" BorderColor="Gray">
                    <StackLayout>
                        <StackLayout HorizontalOptions="CenterAndExpand">
                            <Label Text="Register" TextColor="Black" FontSize="Medium" FontAttributes="Bold" />
                        </StackLayout>

                        <StackLayout Margin="0,25,0,0">
                            <!--FirstNameBox and LastNameBox-->
                            <Frame BackgroundColor="Transparent" BorderColor="Transparent" Padding="0" Margin="0" CornerRadius="0" HorizontalOptions="FillAndExpand">
                                <StackLayout Orientation="Horizontal">


                                    <Entry Placeholder="Firstname" TextColor="Green" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" />
                                    <Entry Placeholder="Lastname" TextColor="Green" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" />
                                </StackLayout>
                            </Frame>
                            
                            <!--EmailwordBox-->
                            <Frame BackgroundColor="Transparent" BorderColor="Transparent" Padding="0" Margin="0,10,0,0" CornerRadius="0" HorizontalOptions="FillAndExpand">
                                <StackLayout Orientation="Horizontal">
                                    
                                    <Entry Placeholder="Email" TextColor="Green" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" />
                                </StackLayout>
                            </Frame>
                            
                            <!--PasswordBox-->
                            <Frame BackgroundColor="Transparent" BorderColor="Transparent" Padding="0" Margin="0,10,0,15" CornerRadius="0" HorizontalOptions="FillAndExpand">
                                <StackLayout Orientation="Horizontal">
                                    
                                    <Entry Placeholder="Password" IsPassword="True" TextColor="Green" HorizontalOptions="FillAndExpand" Margin="0,0,0,0" />
                                </StackLayout>
                            </Frame>

                        </StackLayout>

                        <!--SignInButton-->
                        <Button Text="Register" BackgroundColor="DarkGreen" TextColor="White" FontAttributes="Bold" CornerRadius="15" HeightRequest="40" Margin="70,0,70,0"/>
                        

                    </StackLayout>

                </Frame>

            </StackLayout>
        </Grid>

    </StackLayout>
</ContentPage>